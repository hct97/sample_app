<li>
  <%= gravatar_for user, size: Settings.user.gravatar.all_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !user.current_user?(current_user) %>
    | <%= link_to t("users.delete.title"), user, method: :delete,
        data: {confirm: t("users.confirm")} %>
  <% end %>
</li>
